[Unit]
Description=Strike Connect NWC Wallet Service
After=network.target

[Service]
Type=simple
WorkingDirectory=%h/strike-connect
ExecStart=/usr/bin/node %h/strike-connect/src/index.js
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=strike-connect

Environment=NODE_ENV=production

[Install]
WantedBy=default.target
